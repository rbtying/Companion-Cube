#include "StrongDriveOutput.h"

StrongDriveOutput::StrongDriveOutput(uint8_t pin, bool inverted = false);

void StrongDriveOutput::on() {
	if (m_inverted) {
		m_port &= ~(1 << m_pin);
	} else {
		m_port |= 1 << m_pin;
	}
}

void StrongDriveOutput::off() {
	if (m_inverted) {
		m_port |= 1 << m_pin;
	} else {
		m_port &= ~(1 << m_pin);
	}
}

void StrongDriveOutput::set(bool b) {
	if (b) {
		on();
	} else {
		off();
	}
}

bool StrongDriveOutput::get() {
	return m_status;
}
