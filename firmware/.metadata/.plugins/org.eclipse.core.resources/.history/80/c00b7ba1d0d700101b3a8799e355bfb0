#ifndef DUALMOTOR_H_
#define DUALMOTOR_H_

struct motor_data {
	int16_t leftSpeed;
	int16_t rightSpeed;
};

typedef struct motor_data motor_data;

class DualMotor {
public:
	virtual void setSpeed(motor_data * m) = 0;
	virtual void setSpeed(motor_data * m, bool leftFwd, bool rightFwd) = 0;
	virtual void setM1Speed(int8_t spd) = 0;
	virtual void setM2Speed(int8_t spd) = 0;
	virtual int8_t getLeftSpeed() = 0;
	virtual int8_t getRightSpeed() = 0;
}

#endif /* DUALMOTOR_H_ */
