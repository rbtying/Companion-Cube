#ifndef CONTROL_STRUCT_H_
#define CONTROL_STRUCT_H_

struct PID_params {
	double set;
	double input;
	double output;
	double accumulated;
	double previous;
};

typedef struct PID_params PID_params;

struct control_data {
	double lSet;
	double rSet;
	double lMeas;
	double rMeas;
	long lEnc;
	long rEnc;
	PowerMonitor batt;
	double yawRate;
	double yawVal;
	Servo pan;
	Servo tilt;
	double lPID[3];
	double rPID[3];
};

typedef struct control_data control_data;

#endif /* CONTROL_STRUCT_H_ */
