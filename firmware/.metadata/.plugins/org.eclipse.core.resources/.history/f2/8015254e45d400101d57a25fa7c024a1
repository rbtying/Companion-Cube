#ifndef SABERTOOTH_H_
#define SABERTOOTH_H_

#include <WProgram.h>

#define SABERTOOTH_BAUD_RATE 38400

class Sabertooth {
public:
	Sabertooth(uint8_t m_address);
	void update();
	void setSpeed(int8_t left, int8_t right);

private:
	uint8_t m_address;
	void setLeftSpeed(int16_t spd);
	void setRightSpeed(int16_t spd);
};

#endif /* SABERTOOTH_H_ */
