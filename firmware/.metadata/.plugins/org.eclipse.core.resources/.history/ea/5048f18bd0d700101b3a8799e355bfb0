#ifndef DUALMOTOR_H_
#define DUALMOTOR_H_

class DualMotor {
public:
	virtual void setSpeed(int8_t left, int8_t right) = 0;
	virtual void setSpeed(int8_t left, int8_t right, bool leftFwd, bool rightFwd) = 0;
	virtual void setM1Speed(int8_t spd) = 0;
	virtual void setM2Speed(int8_t spd) = 0;
	virtual int8_t getLeftSpeed() = 0;
	virtual int8_t getRightSpeed() = 0;
}

#endif /* DUALMOTOR_H_ */
