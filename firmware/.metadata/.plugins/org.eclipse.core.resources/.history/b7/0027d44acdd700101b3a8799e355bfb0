#ifndef PID_H_
#define PID_H_

class PID {
public:
	PID();
	void setInput(double in);
	void process();
	void getOutput(double out);
private:
	PID_params * m_param;
};

struct PID_params {
	double set;
	double input;
	double output;
	double accumulated;
	double previous;
	double error;

	double proportional;
	double integral;
	double derivative;

	double accLimit;
};

typedef struct PID_params PID_params;

#endif /* PID_H_ */
