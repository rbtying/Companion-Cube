#ifndef CONTROL_STRUCT_H_
#define CONTROL_STRUCT_H_

struct PID_params {
	double set;
	double input;
	double output;
	double accumulated;
	double previous;

	double proportional;
	double integral;
	double derivative;
};

typedef struct PID_params PID_params;

struct control_data {
	long lEnc;
	long rEnc;
	PowerMonitor batt;
	double yawRate;
	double yawVal;
	Servo pan;
	Servo tilt;
	PID_params leftPID;
	PID_params rightPID;
};

typedef struct control_data control_data;

#endif /* CONTROL_STRUCT_H_ */
