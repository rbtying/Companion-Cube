/**
 * Send a full data packet
 */
void StateController::sendDataPacket() {
}

void robotStateToControl(robot_state * state, control_data * ctrl) {
	state->servo_pan_val;
	state->servo_tilt_val;
	state->batt_motor_voltage;
	state->batt_motor_current;
	state->gyro_yaw_rate;
	state->gyro_yaw_val;
	state->enc_left_speed;
	state->enc_right_speed;
	state->enc_left_count;
	state->enc_right_count;
	state->enc_left_conv;
	state->enc_right_conv;
	state->motor_left_val;
	state->motor_right_val;
	state->pid_left_proportional;
	state->pid_left_integral;
	state->pid_left_derivative;
	state->pid_left_setpoint;
	state->pid_right_proportional;
	state->pid_right_integral;
	state->pid_right_derivative;
	state->pid_right_setpoint;
}
void controlToRobotState(control_data * ctrl, robot_state * state) {

}

/**
 * Request a byte from Serial
 */
char StateController::nextByte(unsigned long timeout) {
	unsigned long timeOutTime = millis() + timeout;
	while (millis() < timeOutTime && !m_hws->available()) {
		// do nothing
	}
	if (m_hws->available())
		return m_hws->read();
	else
		return 0x00;
}
