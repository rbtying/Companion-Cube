#ifndef SERVOMAPPING_H_
#define SERVOMAPPING_H_

#include <string>

namespace ServoMap {

#define NUM_SERVOS_IN_MAPPING 2
std::string mapping[] = { "panservo", "tiltservo" };
std::string servo;

std::string name(int i) {
	if (i < NUM_SERVOS_IN_MAPPING) {
		return mapping[i];
	} else {
		return servo;
	}
}

int id(std::string name) {
	for (uint8_t i = 0; i < NUM_SERVOS_IN_MAPPING; i++) {
		if (mapping[i].compare(name) == 0)
			return i;
	}
	return -1;
}

}

#endif /* SERVOMAPPING_H_ */
