<launch>
    <group ns="lifecam">
        <node pkg="uvc_camera" type="camera_node" name="lifecam" output="screen">
            <param name="width" type="int" value="320" />
            <param name="height" type="int" value="240" />
            <param name="fps" type="int" value="10" />
            <param name="num_worker_threads" type="int" value="1" />
            <param name="skip_frames" type="int" value="0" />
            <param name="frame_id" type="string" value="lifecam" />
            <param name="device" type="string" value="/dev/video0" />
            <param name="camera_info_url" type="string" value="file://$(find rover)/lifecam.yaml" />
            <remap from="camera" to="/lifecam" />
        </node>
    </group>
</launch>
